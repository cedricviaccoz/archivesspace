<% if !full %>
   <div class="recordrow">
<% end %>
      <h3><a class="record-title" href="<%= result['uri'] %>"> <%= result['name']%> (<%= result['repo_code'] %>)</a></h3>
      <div class="badge-and-identifier">
        <div class="record-type-badge repository">
          <i class="fi-home small"></i>&#160;Repository
        </div>
        <div class="identifier">
          <span class="id-label">Identifier:</span>&#160;<%= result['uri'] %>
        </div>
	<div class="<%= (full ? 'clear' : 'recordsummary') %>">
	  <% if full %>
	  <div class="more">
	  <%= result['summary'] || 'Summary would go here!' %>
	  </div>
	  <% end %>
	  <% if !result['parent_institution_name'].blank? %>
	  <div><strong>Parent Institution:</strong> 
	    <% if !result['url'].blank? &&  result['url'] != 'http://url.unspecified' %>
	    <a href="<%= result['url'] %>"><%= result['parent_institution_name']  %></a>
	    <% else %>
	    <%= result['parent_institution_name'] %>
	    <% end %>
	  </div>
	  <% end %>
	  <% ['location', 'contact', 'hours'].each do |t| %>
	     <%# unless result[t].blank? %>
	     <div><strong><%= I18n.t(t)%>:</strong> 
	       <%= (result[t] || "Need this in the solr index!") %>
	     </div>
	     <%# end %>
	  <% end %>
	 <% if !full %>
 <div><strong>Number of <%= I18n.t('resource._plural') %>:</strong> <%= result['count'] %></div>
<% end %>
	</div>					  
      </div>
<% if !full %>
   </div>
<% end %>
